# ============================================================================
# NexoCommerce Multi-Agent ML System - Environment Variables
# ============================================================================
# Copie este arquivo para .env e preencha com suas credenciais
# cp .env.example .env

# ============================================================================
# Kaggle API Credentials (opcional - para download de datasets)
# ============================================================================
# Obtenha suas credenciais em: https://www.kaggle.com/account
KAGGLE_USERNAME=seu_usuario_kaggle
KAGGLE_KEY=sua_chave_api_kaggle

# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=nexocommerce-product-lifecycle

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# ============================================================================
# Model Configuration
# ============================================================================
MODEL_PATH=/app/models/product_lifecycle_model.pkl
MODEL_TYPE=random_forest
# Opções: random_forest, gradient_boosting

# ============================================================================
# Data Configuration
# ============================================================================
DATA_SOURCE=synthetic
# Opções: kaggle, local, synthetic

# Para source=kaggle
KAGGLE_DATASET=aimlveera/counterfeit-product-detection-dataset

# Para source=local
LOCAL_DATA_PATH=/app/data/produtos.csv

# Para source=synthetic
SYNTHETIC_SAMPLES=5000

# ============================================================================
# Training Configuration
# ============================================================================
HYPERPARAMETER_TUNING=true
CROSS_VALIDATION_FOLDS=5
TEST_SIZE=0.2
RANDOM_STATE=42

# ============================================================================
# Streamlit Configuration
# ============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
# Opções: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Python Configuration
# ============================================================================
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1